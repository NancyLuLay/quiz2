<table border="1" width="50%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Message</th>
    <th>Actions</th>
  </tr>

  <tr>
    <td>
      <%=  @request.name %>
    </td>

    <td>
      <%= @request.email%>
    </td>

    <td>
      <%= @request.department%>
    </td>

    <td>
      <%= @request.message%>
    </td>

    <td><%= link_to "Edit", edit_request_path(@request) %>
        <%= link_to "Delete", request_path(@request), method: :delete,
        data: {confirm: "Are you sure you want to delete this request?"} %>
    </td>

  </tr>
